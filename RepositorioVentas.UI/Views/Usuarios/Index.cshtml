@model RepositorioVentas.UI.Models.Usuario

@{
    ViewData["Title"] = "Inicio de Sesión";
}

<!DOCTYPE html>
<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/css/login.css" rel="stylesheet" />
    <style>
        .login-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: white;
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="container h-100">
            <div class="d-flex justify-content-center h-100">
                <div class="user_card" style="background-color: #ffffff !important;">
                    <div class="d-flex justify-content-center">
                        <div class="brand_logo_container" style="background-color: #000000 !important;">
                            <img src="https://static.vecteezy.com/system/resources/thumbnails/007/033/146/small/profile-icon-login-head-icon-vector.jpg" class="brand_logo" alt="Logo">
                        </div>
                    </div>
                    <div class="d-flex justify-content-center form_container">
                        <form asp-action="Index" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="input-group mb-3">
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input asp-for="UserName" class="form-control input_user" placeholder="Nombre" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="input-group mb-2">
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                </div>
                                <input asp-for="PasswordHash" class="form-control input_pass" placeholder="Clave" />
                                <span asp-validation-for="PasswordHash" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-center mt-3 login_container">
                                <input type="submit" value="Iniciar Sesión" class="btn login_btn" />
                            </div>
                        </form>
                    </div>

                    <div class="mt-4">
                        <div class="d-flex justify-content-center links">
                            ¿No tienes una cuenta? <a asp-controller="Usuarios" asp-action="Create" class="ml-2 text-decoration-none">Regístrate</a>
                        </div>
                        <div class="d-flex justify-content-center links">
                            <a asp-controller="Usuarios" asp-action="RestaurarContraseña" class="ml-2 text-decoration-none">¿Olvidaste la contraseña?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
